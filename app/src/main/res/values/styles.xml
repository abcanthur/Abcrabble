<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Tile" >
        <item name="android:textColor">@color/black2</item>
        <item name="android:background">@drawable/border2dp_tile1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Tile.2" >
        <item name="android:background">@drawable/border2dp_tile2</item>
    </style>

    <style name="Tile.notblack3" >
        <item name="android:background">@drawable/border3dpnotblack</item>
    </style>

    <style name="PlayerColor">
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:radius">4dp</item>
    </style>

    <style name="PlayerColor.Red">
        <item name="android:background">@color/DW2red</item>
    </style>

    <style name="PlayerColor.Blue">
        <item name="android:background">@color/DL2blue</item>
    </style>

    <style name="PlayerColor.Orange">
        <item name="android:background">@color/TW2orange</item>
    </style>

    <style name="PlayerColor.Green">
        <item name="android:background">@color/TL2green</item>
    </style>

    <style name="setupSpinners">
        <item name="android:textColor">@color/black2</item>
        <item name="android:background">@color/DWpink</item>
        <item name="android:radius">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setupSpinners.2">
        <item name="android:background">@color/DLskyblue</item>
    </style>

    <style name="setupSpinnersClues">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>
